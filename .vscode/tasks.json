		{
			"label": "clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "echo",
			"command": "echo Hello"
		}
	]
  }